
@{
    ViewBag.Title = "Manage : Actors | Producers | Movies";
}
<br />

<h2 style="margin-bottom:15px">Manage : Actors | Producers | Movies</h2>

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#menu3">Movies</a></li>
    <li><a data-toggle="tab" href="#menu1">Actors</a></li>
    <li><a data-toggle="tab" href="#menu2">Producers</a></li>

</ul>

<div class="tab-content">
    <div id="menu1" class="tab-pane fade ">
        <h3>Add Actor</h3>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <form class="form-horizontal" action="javascript:saveActor();">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="email">Name :</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" autocomplete="off" id="id_txt_actorName" placeholder="Enter Name" maxlength="100" required autofocus>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="pwd">Gender :</label>
                            <div class="col-sm-9">
                                <input type="radio" name="actorgender" value="Male" checked required> Male<br>
                                <input type="radio" name="actorgender" value="Female"> Female<br>
                                <input type="radio" name="actorgender" value="Other"> Other
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="pwd">DOB :</label>
                            <div class="col-sm-9">
                                <input type='text' class="form-control" autocomplete="off" id="id_txt_actorDOB" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="pwd">Bio :</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" id="id_txt_actorBio" placeholder="Enter Bio" rows="7" required maxlength="1000"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4">
                                <input type="hidden" value="" id="id_hid_actorID" />
                                <button type="submit" id="id_btn_actorSave" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-8">
                    <form class="form-horizontal" action="javascript:searchActor();">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="email">Search Actor :</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" autocomplete="off" id="id_txt_actorSearch" placeholder="Enter Name" maxlength="100" required>
                            </div>
                            <div class="col-sm-3">
                                <button type="submit" id="id_btn_actorSearch" class="btn btn-primary" style="margin-top:0">Search</button>
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-bg">
                                    <thead>
                                        <tr>
                                            <th>Sr. No.</th>
                                            <th>Name</th>
                                            <th>Gender</th>
                                            <th>D.O.B</th>
                                            <th>Bio</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="id_tbl_displayActorDetails"></tbody>
                                </table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="menu2" class="tab-pane fade">
        <h3>Add Producer</h3>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <form class="form-horizontal" action="javascript:saveProducer();">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="email">Name :</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" autocomplete="off" id="id_txt_proName" placeholder="Enter Name" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="pwd">Sex :</label>
                            <div class="col-sm-9">
                                <input type="radio" name="progender" value="Male" checked required> Male<br>
                                <input type="radio" name="progender" value="Female"> Female<br>
                                <input type="radio" name="progender" value="Other"> Other
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="pwd">DOB :</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="id_txt_proDOB" autocomplete="off" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="pwd">Bio :</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" id="id_txt_proBio" placeholder="Enter Bio" rows="7" required maxlength="1000"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4">
                                <input type="hidden" value="" id="id_hid_proID" />
                                <button type="submit" id="id_btn_proSave" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-8">
                    <form class="form-horizontal" action="javascript:searchProducer();">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="email">Search Producer :</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" autocomplete="off" id="id_txt_proSearch" placeholder="Enter Name" maxlength="100" required>
                            </div>
                            <div class="col-sm-2">
                                <button type="submit" id="id_btn_proSearch" class="btn btn-primary" style="margin-top:0">Search</button>
                            </div>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="table-responsive">
                                <table class="table table-bordered table-bg">
                                    <thead>
                                        <tr>
                                            <th>Sr. No.</th>
                                            <th>Name</th>
                                            <th>Gender</th>
                                            <th>D.O.B</th>
                                            <th>Bio</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="id_tbl_displayProducerDetails"></tbody>
                                </table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="menu3" class="tab-pane fade  in active">
        <h3>Add Movie</h3>
        <div class="container-fluid">
            <form class="form-horizontal" action="javascript:saveMovie();">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="email">Name :</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" autocomplete="off" id="id_txt_movieName" placeholder="Enter Name" required>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label col-sm-5" for="pwd">Year of Release:</label>
                            <div class="col-sm-7">
                                <select id="id_ddl_movieyearOfRelease" class="form-control" required></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label col-sm-4" for="pwd">Producer :</label>
                            <div class="col-sm-8">
                                <select id="id_ddl_movieProducer" class="form-control" required></select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label col-sm-3" for="pwd">Actors :</label>
                            <div class="col-sm-9">
                                <select id="id_ddl_movieActors" name="name_actor_picker" class="selectpicker" data-show-subtext="true" data-live-search="true" multiple required></select>
                            </div>
                            <br />
                            <br />
                            <br />
                            <div style="padding-left:150px">
                                <input type="hidden" value="" id="id_hid_movieID" />
                                <button type="submit" id="id_btn_movieSave" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label col-sm-5" for="pwd">Poster Url :</label>
                            <div class="col-sm-7" style="padding-top:7px">
                                <input type="file" name="fileToUpload" id="id_file_moviePoster">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label col-sm-4" for="pwd">Plot :</label>
                            <div class="col-sm-8">
                                <textarea rows="5" class="form-control" id="id_txt_moviePlot" placeholder="Enter Description" maxlength="1000" required></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <hr />
            <div class="row">
                <div class="col-md-12">
                    <form class="form-horizontal" action="javascript:searchMovie();">
                        <div class="form-group">
                            <label class="control-label col-sm-2" for="email">Search Movie :</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" id="id_txt_movieSearch" placeholder="Enter Name" maxlength="100" required>
                            </div>
                            <div class="col-sm-2">
                                <button type="submit" id="id_btn_movieSearch" class="btn btn-primary" style="margin-top:0">Search</button>
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12" id="id_div_displayMovieDetails">
                            <div class="table-responsive">
                                <table class="table table-bordered table-bg">
                                    <thead>
                                        <tr>
                                            <th>Sr. No.</th>
                                            <th>Name</th>
                                            <th>Year of Release</th>
                                            <th>Producer</th>
                                            <th>Actors</th>
                                            <th>Plot</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="id_tbl_displayMovieDetails"></tbody>
                                </table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/js/admin.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js"></script>
<!-- Bootstrap DatePicker -->
<script type="text/javascript">
    $(function () {
        $('[id*=id_txt_actorDOB]').datepicker({
            changeMonth: true,
            changeYear: true,
            format: "dd/mm/yyyy",
            language: "tr"
        });
    });
    $(function () {
        $('[id*=id_txt_proDOB]').datepicker({
            changeMonth: true,
            changeYear: true,
            format: "dd/mm/yyyy",
            language: "tr"
        });
    });
</script>
